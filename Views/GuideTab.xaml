<Page x:Class="ScreenshotSweeper.Views.GuideTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Guide">

    <Grid Background="{DynamicResource ApplicationBackgroundBrush}">
        <ScrollViewer>
            <StackPanel Margin="20">
                <TextBlock Text="ScreenshotSweeper Guide" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Overview" FontSize="16" FontWeight="Bold" 
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                           Margin="0,10,0,10"/>
                <TextBlock Text="ScreenshotSweeper automatically monitors your screenshot folder and deletes old screenshots after a configurable time period." 
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Getting Started" FontSize="16" FontWeight="Bold" 
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                           Margin="0,10,0,10"/>
                <TextBlock Text="1. Go to Setup tab and select your screenshot folder&#x0a;2. Choose how long to keep screenshots (default: 30 minutes)&#x0a;3. Screenshots will be automatically deleted when time expires&#x0a;4. Use the Monitor tab to see tracked files" 
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Features" FontSize="16" FontWeight="Bold" 
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                           Margin="0,10,0,10"/>
                <TextBlock Text="• Automatic monitoring of screenshot folder&#x0a;• Configurable deletion time (minutes, hours, or days)&#x0a;• Keep folder for files you want to preserve&#x0a;• Windows notifications for detection and deletion&#x0a;• System tray icon for quick access&#x0a;• Pause/resume monitoring anytime" 
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Tips" FontSize="16" FontWeight="Bold" 
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                           Margin="0,10,0,10"/>
                <TextBlock Text="• Use the Keep folder to save important screenshots&#x0a;• Adjust deletion time in Settings based on your needs&#x0a;• Check Monitor tab to see upcoming deletions&#x0a;• Notifications can be customized in Settings" 
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           Margin="0,0,0,20"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
