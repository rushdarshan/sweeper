<Page x:Class="ScreenshotSweeper.Views.GuideTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="Guide"
      Background="#151515"
      Foreground="#FFFFFF"
      ScrollViewer.VerticalScrollBarVisibility="Auto">

    <ScrollViewer x:Name="RootScrollViewer" 
                  VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="Both"
                  CanContentScroll="False">
        <StackPanel Margin="24,20">
            
            <!-- Page Header -->
            <TextBlock Text="User Guide" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="#FFFFFF"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Learn how to use ScreenshotSweeper effectively"
                       FontSize="13"
                       Foreground="#6c7086"
                       Margin="0,0,0,24"/>

            <!-- Overview Card - Lighter background -->
            <Border Background="#1E1E2E" CornerRadius="10" Padding="18" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Background="#313244" CornerRadius="8" Padding="10" Margin="0,0,12,0">
                            <ui:SymbolIcon Symbol="Info24" FontSize="18" Foreground="#cba6f7"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Overview" FontSize="16" FontWeight="Bold" Foreground="#FFFFFF"/>
                            <TextBlock Text="What is ScreenshotSweeper?" FontSize="11" Foreground="#6c7086"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <TextBlock TextWrapping="Wrap" Foreground="#bac2de" LineHeight="22" FontSize="13">
                        ScreenshotSweeper automatically monitors your screenshot folder and deletes old screenshots 
                        after a configurable time period. It helps keep your system clean by removing temporary 
                        screenshots that you no longer need.
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Getting Started Card - Horizontal Steps -->
            <Border Background="#1E1E2E" CornerRadius="10" Padding="18" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Background="#313244" CornerRadius="8" Padding="10" Margin="0,0,12,0">
                            <ui:SymbolIcon Symbol="Play24" FontSize="18" Foreground="#a6e3a1"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Getting Started" FontSize="16" FontWeight="Bold" Foreground="#FFFFFF"/>
                            <TextBlock Text="Quick setup in 4 steps" FontSize="11" Foreground="#6c7086"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Horizontal Stepper - Non-interactive numbered list -->
                    <Grid Margin="8,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Step 1 -->
                        <StackPanel Grid.Column="0" Margin="0,0,6,0">
                            <Border Background="#313244" Width="26" Height="26" CornerRadius="4" HorizontalAlignment="Center" Margin="0,0,0,8">
                                <TextBlock Text="1" Foreground="#89b4fa" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Select folder" TextAlignment="Center" Foreground="#9399b2" FontSize="11" TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <!-- Step 2 -->
                        <StackPanel Grid.Column="1" Margin="0,0,6,0">
                            <Border Background="#313244" Width="26" Height="26" CornerRadius="4" HorizontalAlignment="Center" Margin="0,0,0,8">
                                <TextBlock Text="2" Foreground="#89b4fa" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Set time limit" TextAlignment="Center" Foreground="#9399b2" FontSize="11" TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <!-- Step 3 -->
                        <StackPanel Grid.Column="2" Margin="0,0,6,0">
                            <Border Background="#313244" Width="26" Height="26" CornerRadius="4" HorizontalAlignment="Center" Margin="0,0,0,8">
                                <TextBlock Text="3" Foreground="#89b4fa" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Save settings" TextAlignment="Center" Foreground="#9399b2" FontSize="11" TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <!-- Step 4 -->
                        <StackPanel Grid.Column="3">
                            <Border Background="#313244" Width="26" Height="26" CornerRadius="4" HorizontalAlignment="Center" Margin="0,0,0,8">
                                <ui:SymbolIcon Symbol="Checkmark16" FontSize="12" Foreground="#a6e3a1"/>
                            </Border>
                            <TextBlock Text="Done!" TextAlignment="Center" Foreground="#a6e3a1" FontSize="11"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Features Card - 2 Column Grid -->
            <Border Background="#1E1E2E" CornerRadius="10" Padding="18" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Background="#313244" CornerRadius="8" Padding="10" Margin="0,0,12,0">
                            <ui:SymbolIcon Symbol="Star24" FontSize="18" Foreground="#f9e2af"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Features" FontSize="16" FontWeight="Bold" Foreground="#FFFFFF"/>
                            <TextBlock Text="What you can do" FontSize="11" Foreground="#6c7086"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- 2-Column Feature Grid -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,8,10">
                            <ui:SymbolIcon Symbol="Checkmark16" FontSize="12" Foreground="#a6e3a1" Margin="0,0,8,0"/>
                            <TextBlock Text="Automatic monitoring" Foreground="#bac2de" FontSize="12"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                            <ui:SymbolIcon Symbol="Checkmark16" FontSize="12" Foreground="#a6e3a1" Margin="0,0,8,0"/>
                            <TextBlock Text="Configurable time" Foreground="#bac2de" FontSize="12"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,8,10">
                            <ui:SymbolIcon Symbol="Checkmark16" FontSize="12" Foreground="#a6e3a1" Margin="0,0,8,0"/>
                            <TextBlock Text="Keep folder protection" Foreground="#bac2de" FontSize="12"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                            <ui:SymbolIcon Symbol="Checkmark16" FontSize="12" Foreground="#a6e3a1" Margin="0,0,8,0"/>
                            <TextBlock Text="Windows notifications" Foreground="#bac2de" FontSize="12"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,0,8,0">
                            <ui:SymbolIcon Symbol="Checkmark16" FontSize="12" Foreground="#a6e3a1" Margin="0,0,8,0"/>
                            <TextBlock Text="System tray support" Foreground="#bac2de" FontSize="12"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Checkmark16" FontSize="12" Foreground="#a6e3a1" Margin="0,0,8,0"/>
                            <TextBlock Text="Pause/Resume control" Foreground="#bac2de" FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Tips Card - Softer, no arrows -->
            <Border Background="#1E1E2E" CornerRadius="10" Padding="18">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,14">
                        <Border Background="#313244" CornerRadius="8" Padding="10" Margin="0,0,12,0">
                            <ui:SymbolIcon Symbol="Lightbulb24" FontSize="18" Foreground="#fab387"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Pro Tips" FontSize="16" FontWeight="Bold" Foreground="#FFFFFF"/>
                            <TextBlock Text="Get the most out of ScreenshotSweeper" FontSize="11" Foreground="#6c7086"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Tips as simple text list - no clickable appearance -->
                    <StackPanel Margin="4,0,0,0">
                        <TextBlock Foreground="#9399b2" FontSize="12" Margin="0,0,0,8">
                            <Run Text="•" Foreground="#6c7086" FontSize="14"/>
                            <Run Text="  Use the Keep folder to save important screenshots permanently"/>
                        </TextBlock>
                        
                        <TextBlock Foreground="#9399b2" FontSize="12" Margin="0,0,0,8">
                            <Run Text="•" Foreground="#6c7086" FontSize="14"/>
                            <Run Text="  Adjust deletion time in Setup based on your workflow"/>
                        </TextBlock>
                        
                        <TextBlock Foreground="#9399b2" FontSize="12" Margin="0,0,0,8">
                            <Run Text="•" Foreground="#6c7086" FontSize="14"/>
                            <Run Text="  Check Monitor tab to see upcoming deletions"/>
                        </TextBlock>
                        
                        <TextBlock Foreground="#9399b2" FontSize="12">
                            <Run Text="•" Foreground="#6c7086" FontSize="14"/>
                            <Run Text="  Enable notifications in Settings to stay informed"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
