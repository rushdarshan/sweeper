<Page x:Class="ScreenshotSweeper.Views.GuideTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="Guide"
      Background="#1A1A1A"
      Foreground="#FFFFFF"
      ScrollViewer.VerticalScrollBarVisibility="Auto">

    <ScrollViewer x:Name="RootScrollViewer" 
                  VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="Both"
                  CanContentScroll="False">
        <StackPanel Margin="24,20">
            
            <!-- Page Header -->
            <TextBlock Text="User Guide" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="#FFFFFF"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Learn how to use ScreenshotSweeper effectively"
                       FontSize="14"
                       Foreground="#808080"
                       Margin="0,0,0,24"/>

            <!-- Overview Card -->
            <Border Background="#1E1E1E" CornerRadius="8" Padding="20" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="10" Margin="0,0,12,0">
                            <ui:SymbolIcon Symbol="Info24" FontSize="20" Foreground="#9B8AFF"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Overview" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                            <TextBlock Text="What is ScreenshotSweeper?" FontSize="12" Foreground="#808080"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <TextBlock TextWrapping="Wrap" Foreground="#CCCCCC" LineHeight="24">
                        ScreenshotSweeper automatically monitors your screenshot folder and deletes old screenshots 
                        after a configurable time period. It helps keep your system clean by removing temporary 
                        screenshots that you no longer need.
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Getting Started Card -->
            <Border Background="#1E1E1E" CornerRadius="8" Padding="20" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="10" Margin="0,0,12,0">
                            <ui:SymbolIcon Symbol="Play24" FontSize="20" Foreground="#4CAF50"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Getting Started" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                            <TextBlock Text="Quick setup guide" FontSize="12" Foreground="#808080"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel>
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="12,10" Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#9B8AFF" Width="24" Height="24" CornerRadius="12" Margin="0,0,12,0">
                                    <TextBlock Text="1" Foreground="#FFFFFF" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Go to Setup tab and select your screenshot folder" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="12,10" Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#9B8AFF" Width="24" Height="24" CornerRadius="12" Margin="0,0,12,0">
                                    <TextBlock Text="2" Foreground="#FFFFFF" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Choose how long to keep screenshots (default: 30 minutes)" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="12,10" Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#9B8AFF" Width="24" Height="24" CornerRadius="12" Margin="0,0,12,0">
                                    <TextBlock Text="3" Foreground="#FFFFFF" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Screenshots will be automatically deleted when time expires" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="12,10">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#9B8AFF" Width="24" Height="24" CornerRadius="12" Margin="0,0,12,0">
                                    <TextBlock Text="4" Foreground="#FFFFFF" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Use the Monitor tab to see tracked files and their countdowns" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Features Card -->
            <Border Background="#1E1E1E" CornerRadius="8" Padding="20" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="10" Margin="0,0,12,0">
                            <ui:SymbolIcon Symbol="Star24" FontSize="20" Foreground="#FFD700"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Features" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                            <TextBlock Text="What you can do" FontSize="12" Foreground="#808080"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <WrapPanel>
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="12,8" Margin="0,0,8,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Checkmark16" FontSize="14" Foreground="#4CAF50" Margin="0,0,8,0"/>
                                <TextBlock Text="Automatic monitoring" Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="12,8" Margin="0,0,8,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Checkmark16" FontSize="14" Foreground="#4CAF50" Margin="0,0,8,0"/>
                                <TextBlock Text="Configurable time" Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="12,8" Margin="0,0,8,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Checkmark16" FontSize="14" Foreground="#4CAF50" Margin="0,0,8,0"/>
                                <TextBlock Text="Keep folder" Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="12,8" Margin="0,0,8,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Checkmark16" FontSize="14" Foreground="#4CAF50" Margin="0,0,8,0"/>
                                <TextBlock Text="Windows notifications" Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="12,8" Margin="0,0,8,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Checkmark16" FontSize="14" Foreground="#4CAF50" Margin="0,0,8,0"/>
                                <TextBlock Text="System tray icon" Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="12,8" Margin="0,0,8,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Checkmark16" FontSize="14" Foreground="#4CAF50" Margin="0,0,8,0"/>
                                <TextBlock Text="Pause/Resume" Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Tips Card -->
            <Border Background="#1E1E1E" CornerRadius="8" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="10" Margin="0,0,12,0">
                            <ui:SymbolIcon Symbol="Lightbulb24" FontSize="20" Foreground="#FF9800"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Pro Tips" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                            <TextBlock Text="Get the most out of ScreenshotSweeper" FontSize="12" Foreground="#808080"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel>
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="12,10" Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="ArrowRight16" FontSize="14" Foreground="#9B8AFF" Margin="0,0,10,0"/>
                                <TextBlock Text="Use the Keep folder to save important screenshots permanently" Foreground="#CCCCCC" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="12,10" Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="ArrowRight16" FontSize="14" Foreground="#9B8AFF" Margin="0,0,10,0"/>
                                <TextBlock Text="Adjust deletion time in Setup based on your workflow" Foreground="#CCCCCC" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="12,10" Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="ArrowRight16" FontSize="14" Foreground="#9B8AFF" Margin="0,0,10,0"/>
                                <TextBlock Text="Check Monitor tab to see upcoming deletions and extend time if needed" Foreground="#CCCCCC" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="12,10">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="ArrowRight16" FontSize="14" Foreground="#9B8AFF" Margin="0,0,10,0"/>
                                <TextBlock Text="Customize notifications in Settings to stay informed" Foreground="#CCCCCC" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
