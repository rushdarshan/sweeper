<Page x:Class="ScreenshotSweeper.Views.SettingsTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="Settings"
      Background="#1A1A1A"
      Foreground="#FFFFFF"
      ScrollViewer.VerticalScrollBarVisibility="Auto">

    <ScrollViewer x:Name="RootScrollViewer" 
                  VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="Both"
                  CanContentScroll="False">
        <StackPanel Margin="24,20">
            
            <!-- Page Header -->
            <TextBlock Text="Settings" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="#FFFFFF"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Customize notifications, startup behavior, and monitoring"
                       FontSize="14"
                       Foreground="#808080"
                       Margin="0,0,0,24"/>

            <!-- Notifications Card -->
            <Border Background="#1E1E1E" CornerRadius="8" Padding="20" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="10" Margin="0,0,12,0">
                            <ui:SymbolIcon Symbol="Alert24" FontSize="20" Foreground="#9B8AFF"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Notifications" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                            <TextBlock Text="Control when you receive alerts" FontSize="12" Foreground="#808080"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,0">
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="16,12" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Screenshot detected" Foreground="#FFFFFF" FontWeight="Medium"/>
                                    <TextBlock Text="Show notification when new screenshot is found" Foreground="#808080" FontSize="12"/>
                                </StackPanel>
                                <CheckBox x:Name="ShowDetectionNotif" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="16,12" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Screenshot deleted" Foreground="#FFFFFF" FontWeight="Medium"/>
                                    <TextBlock Text="Show notification when screenshot is auto-deleted" Foreground="#808080" FontSize="12"/>
                                </StackPanel>
                                <CheckBox x:Name="ShowDeletionNotif" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="16,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Sound alerts" Foreground="#FFFFFF" FontWeight="Medium"/>
                                    <TextBlock Text="Play sound with notifications" Foreground="#808080" FontSize="12"/>
                                </StackPanel>
                                <CheckBox x:Name="PlaySoundNotif" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Startup Card -->
            <Border Background="#1E1E1E" CornerRadius="8" Padding="20" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="10" Margin="0,0,12,0">
                            <ui:SymbolIcon Symbol="Power24" FontSize="20" Foreground="#9B8AFF"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Startup" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                            <TextBlock Text="Configure startup behavior" FontSize="12" Foreground="#808080"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel>
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="16,12" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Launch on Windows startup" Foreground="#FFFFFF" FontWeight="Medium"/>
                                    <TextBlock Text="Start ScreenshotSweeper when Windows boots" Foreground="#808080" FontSize="12"/>
                                </StackPanel>
                                <CheckBox x:Name="LaunchOnStartup" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="16,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Start minimized" Foreground="#FFFFFF" FontWeight="Medium"/>
                                    <TextBlock Text="Start in system tray instead of showing window" Foreground="#808080" FontSize="12"/>
                                </StackPanel>
                                <CheckBox x:Name="StartMinimized" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Monitoring Status Card -->
            <Border Background="#1E1E1E" CornerRadius="8" Padding="20" Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="10" Margin="0,0,12,0">
                            <ui:SymbolIcon Symbol="Eye24" FontSize="20" Foreground="#9B8AFF"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Monitoring" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                            <TextBlock Text="Control active monitoring status" FontSize="12" Foreground="#808080"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Background="#2D2D2D" CornerRadius="6" Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="8" Height="8" CornerRadius="4" Background="#4CAF50" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="StatusLabel" Text="Monitoring Active" Foreground="#4CAF50" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button x:Name="ToggleMonitoringBtn" 
                                    Grid.Column="1"
                                    Content="Pause" 
                                    Click="ToggleMonitoring"
                                    Background="#2D2D2D"
                                    Foreground="#FFFFFF"
                                    BorderBrush="#404040"
                                    BorderThickness="1"
                                    Padding="16,8"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal">
                <Button Click="SaveSettings"
                        Background="#9B8AFF"
                        Foreground="#FFFFFF"
                        BorderThickness="0"
                        Padding="20,12"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Save24" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Save Settings" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
                
                <Button Click="ResetSettings"
                        Background="#2D2D2D"
                        Foreground="#FFFFFF"
                        BorderThickness="0"
                        Padding="20,12"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="ArrowReset24" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Reset"/>
                    </StackPanel>
                </Button>
                
                <Button Click="ClearTracked"
                        Background="#2D2D2D"
                        Foreground="#F44336"
                        BorderThickness="0"
                        Padding="20,12">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Delete24" FontSize="16" Margin="0,0,8,0" Foreground="#F44336"/>
                        <TextBlock Text="Clear Tracked"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            
            <TextBlock x:Name="SaveStatus" 
                       Text="" 
                       Margin="0,16,0,0" 
                       FontSize="14"
                       Foreground="#4CAF50"/>
            
        </StackPanel>
    </ScrollViewer>
</Page>
