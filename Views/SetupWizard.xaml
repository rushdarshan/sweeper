<Window x:Class="ScreenshotSweeper.Views.SetupWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScreenshotSweeper Setup" Height="480" Width="540" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#1e1e2e" Foreground="White">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock FontSize="24" FontWeight="Bold" Text="Welcome to ScreenshotSweeper" Foreground="#a6e3a1" />
            <TextBlock FontSize="13" Foreground="#cdd6f4" Margin="0,8,0,0">Let's set up your automatic screenshot cleanup.</TextBlock>
        </StackPanel>

        <!-- Settings -->
        <StackPanel Grid.Row="1" Margin="0,8,0,8">
            <!-- Screenshot folder -->
            <TextBlock FontWeight="SemiBold" Margin="0,0,0,6">Screenshots Folder</TextBlock>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <TextBox x:Name="FolderPathText" Width="360" IsReadOnly="True" Background="#313244" Foreground="White" BorderBrush="#45475a" Padding="8,6" />
                <Button x:Name="BrowseButton" Content="Browse..." Margin="12,0,0,0" Width="90" Click="BrowseButton_Click" Background="#45475a" Foreground="White" BorderBrush="#585b70" Padding="8,6" />
            </StackPanel>

            <!-- Startup options -->
            <TextBlock FontWeight="SemiBold" Margin="0,8,0,6">Startup Options</TextBlock>
            <CheckBox x:Name="RunAtStartupCheck" Content="Start ScreenshotSweeper when Windows starts" Margin="0,4,0,0" Foreground="#cdd6f4" />
            <CheckBox x:Name="StartMinimizedCheck" Content="Start minimized to system tray" Margin="0,8,0,0" Foreground="#cdd6f4" IsChecked="True" />
            <CheckBox x:Name="LaunchAfterSetupCheck" Content="Launch ScreenshotSweeper after setup" Margin="0,8,0,0" Foreground="#cdd6f4" IsChecked="True" />

            <!-- Info -->
            <Border Background="#313244" CornerRadius="8" Padding="12" Margin="0,24,0,0">
                <StackPanel>
                    <TextBlock FontWeight="SemiBold" Foreground="#f9e2af">How it works:</TextBlock>
                    <TextBlock TextWrapping="Wrap" Foreground="#a6adc8" Margin="0,6,0,0">• ScreenshotSweeper monitors your screenshots folder</TextBlock>
                    <TextBlock TextWrapping="Wrap" Foreground="#a6adc8" Margin="0,2,0,0">• New screenshots are automatically queued for deletion</TextBlock>
                    <TextBlock TextWrapping="Wrap" Foreground="#a6adc8" Margin="0,2,0,0">• You'll get a notification to keep or adjust the timer</TextBlock>
                    <TextBlock TextWrapping="Wrap" Foreground="#a6adc8" Margin="0,2,0,0">• Access the app anytime from the system tray</TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="CancelButton" Content="Cancel" Width="90" Margin="0,0,12,0" Click="CancelButton_Click" Background="#45475a" Foreground="White" BorderBrush="#585b70" Padding="8,8" />
            <Button x:Name="FinishButton" Content="Finish Setup" Width="120" Click="FinishButton_Click" Background="#a6e3a1" Foreground="#1e1e2e" BorderBrush="#a6e3a1" FontWeight="SemiBold" Padding="8,8" />
        </StackPanel>
    </Grid>
</Window>
