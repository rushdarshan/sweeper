<Page x:Class="ScreenshotSweeper.Views.SetupTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:ScreenshotSweeper.Views"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Title="Setup"
      Background="#1A1A1A"
      Foreground="#FFFFFF"
      ScrollViewer.VerticalScrollBarVisibility="Auto">

    <ScrollViewer x:Name="RootScrollViewer" 
                  VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="Both"
                  CanContentScroll="False">
        <StackPanel Margin="24,20">
            
            <!-- Page Header -->
            <TextBlock Text="Setup" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="#FFFFFF"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Configure screenshot monitoring and auto-delete settings"
                       FontSize="14"
                       Foreground="#808080"
                       Margin="0,0,0,24"/>

            <!-- Screenshot Folder Card -->
            <Border Background="#1E1E1E" CornerRadius="8" Padding="20" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="10" Margin="0,0,12,0">
                            <ui:SymbolIcon Symbol="Folder24" FontSize="20" Foreground="#9B8AFF"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Screenshot Folder" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                            <TextBlock Text="Location to monitor for new screenshots" FontSize="12" Foreground="#808080"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Background="#2D2D2D" CornerRadius="4" Padding="12,10" Margin="0,0,12,0">
                            <TextBlock x:Name="FolderPathTextBox" 
                                       Text="Select a folder..."
                                       Foreground="#FFFFFF"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"/>
                        </Border>
                                 
                        <Button x:Name="BrowseButton" 
                                Grid.Column="1" 
                                Click="BrowseFolder"
                                Background="#9B8AFF"
                                Foreground="#FFFFFF"
                                BorderThickness="0"
                                Padding="20,10">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="FolderOpen24" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Browse"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                    
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Info24" FontSize="14" Foreground="#808080" Margin="0,0,8,0"/>
                        <TextBlock Text="This folder will be monitored for new screenshots" Foreground="#808080" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Auto-Delete Timer Card -->
            <Border Background="#1E1E1E" CornerRadius="8" Padding="20" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="10" Margin="0,0,12,0">
                            <ui:SymbolIcon Symbol="Clock24" FontSize="20" Foreground="#9B8AFF"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Auto-Delete Timer" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                            <TextBlock Text="How long to keep screenshots before deletion" FontSize="12" Foreground="#808080"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Border Background="#2D2D2D" CornerRadius="4" Padding="4" Margin="0,0,12,0">
                            <ui:NumberBox x:Name="DeleteTimeValue" 
                                          Width="100"
                                          Value="30" 
                                          SpinButtonPlacementMode="Compact"
                                          Minimum="1" 
                                          Maximum="999"
                                          Background="Transparent"
                                          BorderThickness="0"/>
                        </Border>
                        
                        <ComboBox x:Name="TimeUnitSelector" 
                                  Width="140"
                                  Background="#2D2D2D"
                                  BorderThickness="0">
                            <ComboBoxItem Content="Minutes" IsSelected="True"/>
                            <ComboBoxItem Content="Hours"/>
                            <ComboBoxItem Content="Days"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <!-- Quick Presets -->
                    <TextBlock Text="Quick Presets" FontWeight="SemiBold" Foreground="#808080" FontSize="12" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="Preset15MinBtn" Content="15 Min" Click="SetPreset15Min" 
                                Background="#2D2D2D" Foreground="#FFFFFF" BorderThickness="0"
                                Padding="16,8" Margin="0,0,8,0"/>
                        <Button x:Name="Preset30MinBtn" Content="30 Min" Click="SetPreset30Min"
                                Background="#2D2D2D" Foreground="#FFFFFF" BorderThickness="0"
                                Padding="16,8" Margin="0,0,8,0"/>
                        <Button x:Name="Preset1HourBtn" Content="1 Hour" Click="SetPreset1Hour"
                                Background="#2D2D2D" Foreground="#FFFFFF" BorderThickness="0"
                                Padding="16,8" Margin="0,0,8,0"/>
                        <Button x:Name="Preset3DaysBtn" Content="3 Days" Click="SetPreset3Days"
                                Background="#2D2D2D" Foreground="#FFFFFF" BorderThickness="0"
                                Padding="16,8" Margin="0,0,8,0"/>
                        <Button x:Name="PresetForeverBtn" Content="30 Days" Click="PresetKeepForever"
                                Background="#2D2D2D" Foreground="#FFFFFF" BorderThickness="0"
                                Padding="16,8"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Keep Folder Card -->
            <Border Background="#1E1E1E" CornerRadius="8" Padding="20" Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Background="#2D2D2D" CornerRadius="6" Padding="10" Margin="0,0,12,0">
                            <ui:SymbolIcon Symbol="StarEmphasis24" FontSize="20" Foreground="#4CAF50"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Keep Folder" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                            <TextBlock Text="Files moved here are never deleted" FontSize="12" Foreground="#808080"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <Border Background="#2D2D2D" CornerRadius="4" Padding="12,10" Margin="0,0,0,12">
                        <TextBlock x:Name="KeepFolderTextBox" 
                                   Text="Auto-generated in screenshot folder"
                                   Foreground="#808080"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"/>
                    </Border>
                    
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Shield24" FontSize="14" Foreground="#4CAF50" Margin="0,0,8,0"/>
                        <TextBlock Text="Protected from auto-deletion" Foreground="#4CAF50" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Save Button -->
            <StackPanel Orientation="Horizontal">
                <Button x:Name="SaveButton" 
                        Click="SaveSettings"
                        Background="#9B8AFF"
                        Foreground="#FFFFFF"
                        BorderThickness="0"
                        Padding="24,12">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Save24" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Save Settings" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
                        
                <TextBlock x:Name="StatusMessage" 
                           VerticalAlignment="Center" 
                           FontWeight="SemiBold"
                           Margin="16,0,0,0"/>
            </StackPanel>
            
        </StackPanel>
    </ScrollViewer>
</Page>
